    <style>
        /* -------------- DESIGN TOKENS -------------- */
        :root{
            --bg:#000000;
            --bg-glass:#ffffff08;
            --primary:#0affff;
            --secondary:#ff00c1;
            --accent:#faff00;
            --text:#e6e6e6;
            --text-dim:#8f8f8f;
            --radius:14px;
            --blur:16px;
            --transition:.4s cubic-bezier(.25,1,.5,1);
            --font-mono:"SF Mono","Cascadia Code","Roboto Mono",monospace;
            --font-sans:"Inter","Segoe UI",-apple-system,BlinkMacSystemFont,Helvetica,Arial,sans-serif;
        }
        /* ======  Polaroid  ====== */
.about-grid{grid-template-columns:1fr 1fr;align-items:center;gap:4rem}
.polaroid{
    position:relative;width:260px;height:320px;margin:0 auto;
    background:#111;border:1px solid #a1d3e622;border-radius:var(--radius);
    padding:12px 12px 48px 12px;          /* classic photo strip */
    box-shadow:0 10px 30px #00000080, 0 0 0 1px #ffffff0d;
    transition:transform .4s;
}
.polaroid img{
    width:100%;height:100%;object-fit:cover;border-radius:calc(var(--radius) - 6px);
}
.glow-ring{
    position:absolute;inset:-4px;border-radius:var(--radius);
    background:conic-gradient(var(--primary),var(--secondary),var(--accent),var(--primary));
    filter:blur(18px);opacity:.7;z-index:-1;animation:spin 6s linear infinite;
}
@keyframes spin{to{transform:rotate(360deg)}}
.polaroid:hover{transform:translateY(-8px) scale(1.03)}

/* ======  Living Orbs  ====== */
.orb-tray{display:flex;gap:2rem;justify-content:center;align-items:center;flex-wrap:wrap}
.orb{
    --size:64px;
    width:var(--size);height:var(--size);border-radius:50%;
    display:grid;place-items:center;font-size:1.4rem;
    background:radial-gradient(circle at 30% 30%,#ffffff1a,transparent 60%),var(--bg-glass);
    border:1px solid #ffffff22;box-shadow:0 8px 20px #00000060, inset 0 0 12px #ffffff0d;
    transition:transform .3s,box-shadow .3s;
    animation:float 4s ease-in-out infinite;
}
.orb:nth-child(2){animation-delay:.5s}
.orb:nth-child(3){animation-delay:1s}
.orb:nth-child(4){animation-delay:1.5s}
@keyframes float{0%,100%{transform:translateY(0)}50%{transform:translateY(-10px)}}
.orb:hover{
    transform:scale(1.15) rotate(10deg);
    box-shadow:0 0 25px var(--orb-glow, var(--primary)), inset 0 0 15px #ffffff40;
}
/* individual brand colours */
.orb.linkedin{--orb-glow:#0077b5}
.orb.github{--orb-glow:#fff}
.orb.twitter{--orb-glow:#1da1f2}
.orb.instagram{--orb-glow:#e4405f}

/* minor responsive tweak */
@media(max-width:992px){.about-grid{grid-template-columns:1fr}.polaroid{order:-1}}
        /* -------------- RESET -------------- */
        *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
        html{scroll-behavior:smooth;-webkit-text-size-adjust:100%}
        body{
            background:var(--bg);
            color:var(--text);
            font-family:var(--font-sans);
            line-height:1.6;
            -webkit-font-smoothing:antialiased;
            overflow-x:hidden;
        }
        ::selection{background:var(--primary);color:#000}
        img,svg{max-width:100%;display:block}
        a{color:inherit;text-decoration:none}
        button,input,textarea{font:inherit;color:inherit;border:none;background:none}
        ul{list-style:none}
        /* -------------- UTILS -------------- */
        .container{width:90%;max-width:1200px;margin:0 auto}
        .flex{display:flex;align-items:center;gap:1rem}
        .grid{display:grid;gap:2rem}
        .btn{
            display:inline-flex;align-items:center;justify-content:center;
            padding:.9rem 2rem;border-radius:var(--radius);font-weight:600;
            background:linear-gradient(135deg,var(--primary),var(--secondary));
            color:#000;cursor:pointer;transition:var(--transition);
            box-shadow:0 0 20px #0affff80;
        }
        .btn:hover{transform:translateY(-4px) scale(1.03);box-shadow:0 0 35px #0affff}
        .btn-outline{
            background:transparent;border:2px solid var(--primary);
            color:var(--primary);box-shadow:none;
        }
        .btn-outline:hover{background:var(--primary);color:#000}
        .section-title{
            font-size:clamp(2rem,5vw,3.5rem);
            font-weight:800;
            letter-spacing:-.03em;
            background:linear-gradient(90deg,var(--primary),var(--secondary));
            -webkit-background-clip:text;-webkit-text-fill-color:transparent;
            margin-bottom:3rem;text-align:center;
        }
        /* -------------- HEADER -------------- */
        header{
            position:fixed;top:0;left:0;right:0;z-index:1000;
            background:var(--bg-glass);backdrop-filter:blur(var(--blur));
            border-bottom:1px solid #ffffff14;
        }
        nav{
            display:flex;justify-content:space-between;align-items:center;
            padding:1.2rem 0;
        }
        .logo{
            font-size:1.5rem;font-weight:800;
            background:linear-gradient(90deg,var(--primary),var(--accent));
            -webkit-background-clip:text;-webkit-text-fill-color:transparent;
        }
        .nav-links{
            display:flex;gap:2rem;
        }
        .nav-links a{
            position:relative;font-weight:500;
            transition:var(--transition);
        }
        .nav-links a::after{
            content:'';position:absolute;bottom:-6px;left:0;
            width:0;height:2px;background:var(--primary);
            transition:width var(--transition);
        }
        .nav-links a:hover::after{width:100%}
        .hamburger{display:none;font-size:1.8rem;cursor:pointer}
        /* -------------- HERO -------------- */
        .hero{
            min-height:100vh;display:flex;align-items:center;justify-content:center;
            text-align:center;padding:8rem 0 4rem;
            background:radial-gradient(circle at 20% 20%,#0affff26,transparent 40%),
                      radial-gradient(circle at 80% 70%,#ff00c126,transparent 40%);
            position:relative;
        }
        .hero h1{
            font-size:clamp(2.8rem,8vw,6rem);
            font-weight:900;line-height:1.1;
            letter-spacing:-.04em;
            background:linear-gradient(135deg,var(--primary),var(--accent));
            -webkit-background-clip:text;-webkit-text-fill-color:transparent;
            margin-bottom:1rem;
        }
        .hero .tagline{
            font-size:clamp(1.1rem,2.5vw,1.5rem);
            color:var(--text-dim);margin-bottom:2rem;
        }
        .hero-btns{display:flex;gap:1.5rem;justify-content:center;flex-wrap:wrap}
        /* -------------- GLASS CARDS -------------- */
        .glass{
            background:var(--bg-glass);border:1px solid #ffffff18;
            border-radius:var(--radius);backdrop-filter:blur(var(--blur));
            padding:2.5rem;transition:var(--transition);
        }
        .glass:hover{transform:translateY(-6px);border-color:var(--primary);}
        /* -------------- SECTIONS -------------- */
        section{padding:5rem 0}
        .about .grid{grid-template-columns:1fr 1fr;align-items:center;gap:4rem}
        .about-img{
            height:320px;background:radial-gradient(circle,var(--primary),var(--secondary));
            border-radius:var(--radius);position:relative;overflow:hidden;
        }
        .about-img::after{
            content:'';position:absolute;inset:0;
            background:url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text x="10" y="50" font-size="60" fill="%23000" opacity=".08">0101</text></svg>');
            background-size:cover;
        }
        .experience-grid{grid-template-columns:repeat(auto-fit,minmax(280px,1fr))}
        .skills-grid{grid-template-columns:repeat(auto-fit,minmax(220px,1fr))}
        .value-grid{grid-template-columns:repeat(auto-fit,minmax(220px,1fr))}
        .contact-grid{grid-template-columns:1fr 1fr;gap:4rem}
        /* -------------- FORM -------------- */
        .form-group{margin-bottom:1.5rem}
        .form-control{
            width:100%;padding:1rem;border:1px solid #ffffff22;
            border-radius:var(--radius);background:#ffffff0d;
            transition:var(--transition);
        }
        .form-control:focus{outline:none;border-color:var(--primary);box-shadow:0 0 0 3px #0affff40}
        /* -------------- FOOTER -------------- */
        footer{
            text-align:center;padding:3rem 0 2rem;
            border-top:1px solid #ffffff14;
        }
        .social{
            display:flex;gap:1.2rem;justify-content:center;margin-bottom:2rem}
        .social a{
            width:44px;height:44px;border:1px solid #ffffff22;
            border-radius:50%;display:grid;place-items:center;
            transition:var(--transition);
        }
        .social a:hover{background:var(--primary);color:#000;border-color:var(--primary);}
        /* -------------- ANIMATIONS -------------- */
        [data-animate]{opacity:0;transform:translateY(30px);transition:opacity .8s ease,transform .8s ease}
        [data-animate="visible"]{opacity:1;transform:none}
        /* -------------- RESPONSIVE -------------- */
        @media(max-width:992px){
            .about .grid,.contact-grid{grid-template-columns:1fr}
            .about-img{order:-1;height:250px}
        }
        @media(max-width:768px){
            .nav-links{
                position:fixed;top:0;right:-100%;width:70%;max-width:280px;
                height:100vh;background:#000000ee;flex-direction:column;
                padding:6rem 2rem 2rem;transition:right var(--transition);
                border-left:1px solid #ffffff22;
            }
            .nav-links.active{right:0}
            .hamburger{display:block}
        }
        @media(max-width:480px){
            .hero-btns{flex-direction:column;width:100%}
            .btn{width:100%}
        }
    </style>
</head>
<body>
